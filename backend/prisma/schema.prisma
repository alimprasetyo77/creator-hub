generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  full_name  String    @db.VarChar(100)
  role       Role      @default(USER)
  password   String    @db.VarChar(100)
  email      String    @unique
  created_at DateTime  @default(now())
  avatar     String?   @db.VarChar(225)
  token      String?   @db.Text()
  balance    Float?
  products   Product[]

  @@map("users")
}

model Product {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  description String
  price       Float
  thumbnail   String
  sales       Int
  rating      Float
  featured    Boolean
  status      String
  created_at  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  userId     String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@map("products")
}

model Category {
  id       String    @id @default(uuid())
  name     String
  products Product[]

  @@map("categories")
}

enum Role {
  ADMIN
  USER
  CREATOR
}
